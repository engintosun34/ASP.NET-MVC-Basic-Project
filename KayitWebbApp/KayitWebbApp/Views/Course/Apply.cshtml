@model Candidate
<div class ="display-5">
    
    Apply
</div>

<form method="post" asp-action="Apply">
    <div class="form-group my-2">
        <label asp-for="Email">E-Mail</label>
        <input asp-for="Email" class=" form-control"/>
    </div>

        <div class="form-group my-2">
        <label asp-for ="FirstName">  </label>
        <input asp-for="FirstName" class=" form-control" />
    </div>

            <div class="form-group my-2">
        <label asp-for="LastName">  </label>
        <input asp-for="LastName" class=" form-control" />
    </div>

                <div class="form-group my-2">
                    <label asp-for="Age"  >  </label>
        <select asp-for="Age" class="Age">
                        <option value ="18">18</option>
                        <option value="19">19</option>
                        <option value="20">20</option>
                        <option value="21">21</option>
                        <option value="22">22</option>
                        <option value="23">23</option>
                    </select>

    </div>

    <fieldset>
        <legend >Select One Course</legend>
        <p> <input id="mvc" type="radio" asp-for="SelectedCourse" value="ASP.NET CORE MVC"/></p>
        <label> ASP.NET CORE MVC</label>
         <p> <input id="api" type="radio" asp-for="SelectedCourse" value="ASP.NET CORE API"/></p>
        <label> ASP.NET CORE API</label>
        <p> <input id="api" type="radio" asp-for="SelectedCourse" value="Razor" /></p>
        <label> Razor</label>
    </fieldset>

    <div> 
        <button class="btn btn-primary" type="submit" >Apply</button>
        <a class="btn btn-warning" asp-controller="Home" asp-action="Index">Home</a>
        </div>
</form>